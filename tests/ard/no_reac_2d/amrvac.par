!=====================================================
! Pure advection-diffusion..
!=====================================================

&filelist
    base_filename = 'pure_ad_'
/

&savelist
    tsave(1,2) = 0.0d0
    dtsave_log = 2.5d0
    dtsave_dat = 2.5d0
/

&stoplist
    time_max = 1.0d2
/

&methodlist
    flux_scheme     = 20*'tvdlf'
    time_stepper    = 'onestep'
    time_integrator = 'IMEX_Euler'
/

&boundlist
    typeboundary_min1 = 2*'periodic'
    typeboundary_max1 = 2*'periodic'
    typeboundary_min2 = 2*'periodic'
    typeboundary_max2 = 2*'periodic'
/

&meshlist
    refine_max_level = 1

    domain_nx1 = 128
    domain_nx2 = 128
    block_nx1  = 16
    block_nx2  = 16

    xprobmin1 = 0.0d0
    xprobmax1 = 64.0d0
    xprobmin2 = 0.0d0
    xprobmax2 = 64.0d0
/

&paramlist
    slowsteps = 100
    dtdiffpar = 100.0d0
/

&ard_list
    equation_name = "brusselator"
    D1   = 0.0d0
    A1   = 0.0d0 0.0d0
/
