!=====================================================
! Advection Reaction Diffusion
!=====================================================

 &filelist
        base_filename = 'post2_output/nonlin1_'
    	convert_type = 'vtuBCCmpi'
        autoconvert = T
 /

 &savelist
        dtsave_log = 0.5d-4
        dtsave_dat = 0.5d-4
        itsave(1,2) = 0
 /

 &stoplist
        time_max=1.0d-3
 /

 &methodlist
        time_stepper = 'twostep'
        time_integrator = 'IMEX_Trapezoidal'
        flux_scheme = 20*'tvdlf'
        limiter= 20*'mp5'
 /

 &boundlist
        typeboundary_min1=2*'periodic'
        typeboundary_max1=2*'periodic'
        typeboundary_min2=2*'periodic'
        typeboundary_max2=2*'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        block_nx2=16
        domain_nx1=128
        domain_nx2=128
        xprobmin1=0.0d0
        xprobmax1=1.0d0
        xprobmin2=0.0d0
        xprobmax2=1.0d0

        iprob = 2
 /

 &paramlist
       dtpar=5.0d-7
 /

 &ard_list
       equation_name = "schnakenberg"
       !sb_alpha = 1.01d-1
       !sb_beta = 1.01d0
       !sb_kappa = 60.466
       !D1 = 0.05d0
       D1 = 0.1d0
       D2 = 1.0d0
       adv_pow = 2
       A1 = 1.0d0 0.0d0
       A2 = 1.0d0 0.0d0
 /
