!=====================================================
! Nonlinear advection.
!=====================================================

&filelist
    base_filename = 'output/nonlin_adv_'
    convert_type='vtuBCCmpi'
    autoconvert=T
/

&savelist
    itsave(1,1) = 0
    itsave(1,2) = 0
    ditsave_log = 1
    dtsave_dat = 2.0d-3
/

&stoplist
    time_max = 2.0d-1
/

&methodlist
    flux_scheme     = 20*'tvdlf'
    time_stepper    = 'threestep'
    !time_integrator = 'IMEX_Euler'
    limiter         = 20*'cada3'
/

&boundlist
    typeboundary_min1 = 'periodic'
    typeboundary_max1 = 'periodic'
/

&meshlist
    refine_max_level = 4
    refine_threshold = 20*0.1d0

    domain_nx1 = 120
    block_nx1  = 10

    xprobmin1 = 0.0d0
    xprobmax1 = 1.0d1

    iprob = 4
/

&paramlist
    courantpar=0.4d0
    !slowsteps = 100
    !dtdiffpar = 100.0d0
/

&ard_list
    equation_name = "no_reac"
    advection_linear = F
    D1   = 0.0d0
    A1   = 1.0d0 0.0d0
/
