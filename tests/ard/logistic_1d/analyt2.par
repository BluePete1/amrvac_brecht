&filelist
    base_filename = 'data/analyt22_'
    convert_type  = 'vtuBCCmpi'
    autoconvert   = T
/

&savelist
    itsave(1,2) = 0
    dtsave_log  = 1.0d0
    dtsave_dat  = 1.0d0
/

&stoplist
    time_max = 15.0d0
/

&methodlist
    time_stepper    = "onestep"
    time_integrator = "IMEX_Euler"
    flux_scheme     = 20*'tvdlf'
    limiter         = 20*'weno7'
/

&boundlist
    typeboundary_min1 = 'symm'
    typeboundary_max1 = 'symm'
/

&meshlist
    refine_max_level = 1
    domain_nx1 = 1024
    block_nx1  = 16
    iprob      = 2
    xprobmin1  = -20.0d0
    xprobmax1  =  20.0d0
/

&paramlist
    dtdiffpar   = 0.8d0
/

&ard_list
    equation_name = "logistic"
    D1        = 1.0d-1
    lg_lambda = 1.0d0
    adv_pow   = 2
    A1        = -1.0d0
/
