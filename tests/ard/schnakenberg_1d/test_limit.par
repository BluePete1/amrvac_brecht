!=====================================================
! Advection Reaction Diffusion
!=====================================================

 &filelist
        base_filename='output/limit_test3_'
    	convert_type='vtuBCCmpi'
        autoconvert=T
 /

 &savelist
        dtsave_log=0.1d0
        dtsave_dat=0.1d0
        itsave(1,2)=0
 /

 &stoplist
        time_max=2.0d0
 /

 &methodlist
        time_stepper = 'twostep'
        time_integrator = 'IMEX_Trapezoidal'
        flux_scheme = 20*'tvdlf'
        limiter= 20*'weno7'
 /

 &boundlist
        typeboundary_min1=2*'periodic'
        typeboundary_max1=2*'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        domain_nx1=256
        xprobmin1=0.0d0
        xprobmax1=1.0d0
 /
 &paramlist
       dtpar=1.0d-4
 /

 &ard_list
       equation_name = "schnakenberg"
       !sb_alpha = 0.2
       !sb_beta = 1.3
       !sb_kappa = 220
       D1 = 0.05d0
       D2 = 1.0d0
       adv_pow = 2
       A1 = 3.0d0
       A2 = 3.0d0
 /
